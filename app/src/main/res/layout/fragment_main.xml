<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="MainFragment"
            type="com.odukle.viddit.MainFragment" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vp_viddit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
            

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:background="@color/black"
                android:id="@+id/layout_toolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbar">

                    <ImageView
                        android:id="@+id/tv_app_name"
                        android:layout_width="60dp"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_icon__1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_go_to_top"
                        android:src="@drawable/ic_go_to_top"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_reload"
                        android:src="@drawable/ic_shuffle"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"/>

                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_discover"
                        android:text="Discover"
                        android:layout_toEndOf="@id/iv_search"
                        android:layout_toStartOf="@id/tv_app_name"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="5dp"
                        android:fontFamily="@font/bold"
                        android:textSize="16sp"/>
                </RelativeLayout>


                <HorizontalScrollView
                    android:id="@+id/scroll_view_chips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@id/toolbar"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_popular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="popular" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_memes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="memes" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_funny"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="funny" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_aww"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="aww" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_wholesome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="wholesome" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_dank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="dank" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="news" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/movies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="movies" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/sports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="sports" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/travel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="travel" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/science"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="science" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="food" />
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
            </RelativeLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/shimmer_for_sr_fragment">

                <include layout="@layout/shimmer_for_sr"/>
            </com.facebook.shimmer.ShimmerFrameLayout>

        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Viddit" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="font">@font/bold</item>
        <item name="colorControlNormal">?attr/colorControlNormal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ToolbarTitleSmall" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/bold</item>
        <item name="colorControlNormal">?attr/colorControlNormal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextViewShadow" >
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="ImageViewShape8" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="ImageViewShape3" parent="">
        <item name="cornerSize">3%</item>
    </style>

    <style name="ImageViewShape50" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>